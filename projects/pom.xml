<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <packaging>pom</packaging>

  <!-- Application properties -->
  <groupId>com.ibm.cicsdev</groupId>
  <artifactId>cics-java-osgi-link</artifactId>
  <version>1.0.0</version>
  <name>CICS OSGi link application</name>
  <description>Demonstrates how OSGi CICS programs link to other programs sending a commarea or
    channel, or are linked to receiving a commarea or channel.</description>
  <url>https://github.com/cicsdev/cics-java-osgi-link</url>
  <developers>
    <developer>
      <id>ibm</id>
      <name>IBM</name>
      <url>https://www.ibm.com/products/cics-transaction-server</url>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <properties>
    <!-- CICS bundle properties -->
    <cics.jvmserver>DFHOSGI</cics.jvmserver>

    <!-- Dependency versions -->
    <cics.annotation.processor.version>6.1</cics.annotation.processor.version>
    <cics.bom.version>6.1-20220617120000</cics.bom.version>
    <osgi.version>8.0.0</osgi.version>

    <!-- Plugin versions -->
    <bnd.plugin.version>6.3.1</bnd.plugin.version>
    <cics.bundle.plugin.version>1.0.3</cics.bundle.plugin.version>
    <maven.compiler.plugin.version>3.11.0</maven.compiler.plugin.version>

    <!-- Java project properties -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>8</maven.compiler.source>
    <maven.compiler.target>8</maven.compiler.target>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.ibm.cics</groupId>
        <artifactId>com.ibm.cics.ts.bom</artifactId>
        <version>${cics.bom.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.osgi</groupId>
        <artifactId>osgi.annotation</artifactId>
        <version>${osgi.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <pluginManagement>
      <!-- lock down plugins versions to avoid using Maven defaults (may be moved to parent pom) -->
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>${maven.compiler.plugin.version}</version>
        </plugin>

        <!-- CICS bundle plugin for generating CICS bundles -->
        <plugin>
          <groupId>com.ibm.cics</groupId>
          <artifactId>cics-bundle-maven-plugin</artifactId>
          <version>${cics.bundle.plugin.version}</version>
          <extensions>true</extensions>
          <configuration>
            <defaultjvmserver>${cics.jvmserver}</defaultjvmserver>
          </configuration>
        </plugin>

        <!-- Bnd pluging for generating OSGi bundles -->
        <plugin>
          <groupId>biz.aQute.bnd</groupId>
          <artifactId>bnd-maven-plugin</artifactId>
          <version>${bnd.plugin.version}</version>
          <extensions>true</extensions>
          <executions>
            <execution>
              <id>jar</id>
              <goals>
                <goal>jar</goal>
              </goals>
            </execution>
            <execution>
              <id>bnd-process</id>
              <goals>
                <goal>bnd-process</goal>
              </goals>
            </execution>
          </executions>
        </plugin>

        <!-- Java compiler with the CICS annotation processor -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>${maven.compiler.plugin.version}</version>
          <configuration>
            <!-- Enable the CICS Annotation Processor -->
            <annotationProcessorPaths>
              <annotationProcessorPath>
                <groupId>com.ibm.cics</groupId>
                <artifactId>com.ibm.cics.server.invocation</artifactId>
                <version>${cics.annotation.processor.version}</version>
              </annotationProcessorPath>
            </annotationProcessorPaths>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <modules>
    <module>cics-java-osgi-link-app</module>
    <module>cics-java-osgi-link-bundle</module>
  </modules>
</project>